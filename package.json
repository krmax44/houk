{
	"name": "houk",
	"version": "2.0.0",
	"main": "build/index.js",
	"types": "build/index.d.ts",
	"files": [
		"build"
	],
	"repository": "github:krmax44/houk",
	"author": "krmax44<hi@krmax44.de>",
	"license": "MIT",
	"scripts": {
		"test": "jest",
		"lint": "xo",
		"ci": "yarn lint && yarn test --coverage",
		"build": "tsc",
		"dev": "tsc -w"
	},
	"devDependencies": {
		"@types/jest": "^25.1.3",
		"@typescript-eslint/eslint-plugin": "^2.21.0",
		"@typescript-eslint/parser": "^2.21.0",
		"eslint-config-prettier": "^6.10.0",
		"eslint-config-xo-typescript": "^0.26.0",
		"eslint-plugin-prettier": "^3.1.2",
		"husky": "^4.2.3",
		"jest": "^25.1.0",
		"np": "^6.1.0",
		"prettier": "^1.19.1",
		"ts-jest": "^25.2.1",
		"typescript": "^3.8.2",
		"xo": "^0.27.2"
	},
	"xo": {
		"extends": [
			"xo-typescript",
			"plugin:prettier/recommended"
		],
		"extensions": [
			"ts",
			"js"
		],
		"ignores": [
			"jest.config.js"
		],
		"rules": {
			"no-await-in-loop": "off",
			"@typescript-eslint/prefer-nullish-coalescing": "off"
		},
		"overrides": [
			{
				"files": "**/__tests__/**",
				"rules": {
					"unicorn/filename-case": "off",
					"no-undef": "off"
				}
			}
		],
		"prettier": true
	},
	"prettier": {
		"bracketSpacing": true,
		"singleQuote": true,
		"useTabs": true
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint",
			"pre-push": "yarn test --clear-cache && yarn test"
		}
	},
	"dependencies": {
		"always-array": "^1.1.0"
	}
}
