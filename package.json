{
	"name": "houk",
	"version": "3.0.3",
	"main": "build/index.js",
	"types": "build/index.d.ts",
	"files": [
		"build"
	],
	"repository": "github:krmax44/houk",
	"author": "krmax44<hi@krmax44.de>",
	"license": "MIT",
	"scripts": {
		"test": "jest",
		"lint": "xo",
		"build": "tsc",
		"dev": "tsc -w"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/jest": "^26.0.20",
		"@typescript-eslint/eslint-plugin": "^4.17.0",
		"@typescript-eslint/parser": "^4.17.0",
		"eslint-config-xo-typescript": "^0.38.0",
		"eslint-plugin-prettier": "^3.3.1",
		"husky": "4",
		"jest": "^26.6.3",
		"jest-extended": "^0.11.5",
		"np": "^7.4.0",
		"prettier": "^2.2.1",
		"ts-jest": "^26.5.3",
		"typescript": "^4.2.3",
		"xo": "^0.38.2"
	},
	"xo": {
		"extends": [
			"xo-typescript"
		],
		"extensions": [
			"ts",
			"js"
		],
		"ignores": [
			"jest.config.js"
		],
		"rules": {
			"no-await-in-loop": "off",
			"unicorn/filename-case": "off",
			"@typescript-eslint/no-confusing-void-expression": "off"
		},
		"overrides": [
			{
				"files": "**/__tests__/**",
				"rules": {
					"no-undef": "off"
				}
			}
		],
		"prettier": true
	},
	"prettier": {
		"bracketSpacing": true,
		"singleQuote": true,
		"useTabs": true
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint",
			"pre-push": "yarn test --clear-cache && yarn test"
		}
	}
}
