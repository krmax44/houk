{
	"name": "houk",
	"version": "3.0.0",
	"main": "build/index.js",
	"types": "build/index.d.ts",
	"files": [
		"build"
	],
	"repository": "github:krmax44/houk",
	"author": "krmax44<hi@krmax44.de>",
	"license": "MIT",
	"scripts": {
		"test": "jest",
		"lint": "xo",
		"ci": "yarn lint && yarn test --coverage",
		"build": "tsc",
		"dev": "tsc -w"
	},
	"devDependencies": {
		"@types/jest": "^26.0.10",
		"@typescript-eslint/eslint-plugin": "^3.10.1",
		"@typescript-eslint/parser": "^3.10.1",
		"eslint-config-prettier": "^6.11.0",
		"eslint-config-xo-typescript": "^0.32.0",
		"eslint-plugin-prettier": "^3.1.4",
		"husky": "^4.2.5",
		"jest": "^26.4.2",
		"jest-extended": "^0.11.5",
		"np": "^6.4.0",
		"prettier": "^2.1.1",
		"ts-jest": "^26.3.0",
		"typescript": "^4.0.2",
		"xo": "^0.33.0"
	},
	"xo": {
		"extends": [
			"xo-typescript",
			"plugin:prettier/recommended"
		],
		"extensions": [
			"ts",
			"js"
		],
		"ignores": [
			"jest.config.js"
		],
		"rules": {
			"no-await-in-loop": "off",
			"unicorn/filename-case": "off",
			"@typescript-eslint/explicit-function-return-type": "off"
		},
		"overrides": [
			{
				"files": "**/__tests__/**",
				"rules": {
					"no-undef": "off"
				}
			}
		],
		"prettier": true
	},
	"prettier": {
		"bracketSpacing": true,
		"singleQuote": true,
		"useTabs": true
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint",
			"pre-push": "yarn test --clear-cache && yarn test"
		}
	},
	"dependencies": {
		"always-array": "^1.1.0"
	}
}
